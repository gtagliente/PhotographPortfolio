@model BlogSystem.Web.ViewModels.PaginationViewModel

@if (Model.PagesCount > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item previous">
                <a href="@Url.Action("Index", new {area = string.Empty, page = Model.PreviousPage})" class="page-link" aria-label="Previous">
                    <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item active">
                        @Html.ActionLink($"{i}", "Index", new { area = string.Empty, page = i }, new { @class = "page-link" })
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink($"{i}", "Index", new { area = string.Empty, page = i }, new { @class = "page-link" })
                    </li>
                }
            }

            <li class="page-item next">
                <a href="@Url.Action("Index", new { area = string.Empty, page = Model.NextPage })" class="page-link" aria-label="Next">
                    <i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>

    </nav>
}
